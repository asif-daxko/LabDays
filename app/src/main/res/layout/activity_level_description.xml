<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity.LevelDescriptionActivity">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:srcCompat="@drawable/close_button" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Levels"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/back_img"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <RadioGroup
        android:id="@+id/levels_radiogrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <RadioButton
            android:id="@+id/level1"
            android:layout_width="0dp"
            android:checked="true"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:button="@null"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/radio_btn_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Level\n1"
            android:textColor="@drawable/tab_text_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"/>

        <RadioButton
            android:id="@+id/level2"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:button="@null"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/radio_btn_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Level\n2"
            android:textColor="@drawable/tab_text_selector"
            app:layout_constraintBottom_toBottomOf="@+id/level1"
            app:layout_constraintStart_toEndOf="@+id/level1"
            app:layout_constraintTop_toTopOf="@+id/level1">

        </RadioButton>

        <RadioButton
            android:id="@+id/level3"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:button="@null"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/radio_btn_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Level\n3"
            android:textColor="@drawable/tab_text_selector"
            app:layout_constraintBottom_toBottomOf="@+id/level2"
            app:layout_constraintStart_toEndOf="@+id/level2"
            app:layout_constraintTop_toTopOf="@+id/level2"
            app:layout_constraintVertical_bias="0.0"/>

        <RadioButton
            android:id="@+id/level4"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:button="@null"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/radio_btn_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Level\n4"
            android:textColor="@drawable/tab_text_selector"
            app:layout_constraintBottom_toBottomOf="@+id/level3"
            app:layout_constraintStart_toEndOf="@+id/level3"
            app:layout_constraintTop_toTopOf="@+id/level3">

        </RadioButton>

        <RadioButton
            android:id="@+id/level5"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:button="@null"
            android:textAlignment="center"
            android:layout_weight="1"
            android:background="@drawable/radio_btn_selector"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:text="Level\n5"
            android:textColor="@drawable/tab_text_selector"
            app:layout_constraintBottom_toBottomOf="@+id/level4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/level4"
            app:layout_constraintTop_toTopOf="@+id/level4"
            app:layout_constraintVertical_bias="0.0">

        </RadioButton>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levels_radiogrp" />


</androidx.constraintlayout.widget.ConstraintLayout>