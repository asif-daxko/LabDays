    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/t_shirt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_regular"
        android:text="T-shirt"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView_item" />

    <TextView
        android:id="@+id/textView_redeem_points_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/roboto_bold"
        android:text="200 DC"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_name" />

    <TextView
        android:id="@+id/textView_claim_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/roboto_medium"
        android:padding="10dp"
        android:text="Add to Redeem"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        app:layout_constraintTop_toBottomOf="@+id/textView_redeem_points_val" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/textView_claim_now"
        app:layout_constraintRight_toLeftOf="@+id/textView_claim_now"
        app:layout_constraintTop_toTopOf="@+id/textView_claim_now" />
</androidx.constraintlayout.widget.ConstraintLayout>