<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".activity.SearchFriendActivity">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="#151515"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:queryBackground="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:background="@drawable/search_view_drawable"
                android:queryHint="Search by Name/Member Id"
                android:iconifiedByDefault="false"
                android:layout_alignParentTop="true"
                />
        </LinearLayout>
         <TextView
             android:id="@+id/participient"
             android:text="Add Participants"
             android:textColor="@color/white"
             android:textSize="17sp"
             android:fontFamily="@font/roboto_bold"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"></TextView>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInvite"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFriend"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

<TextView
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:text="Submit"
    android:gravity="center"
    android:id="@+id/submit"
    android:textSize="15sp"
    android:textColor="@color/white"
    android:visibility="visible"
    android:fontFamily="@font/roboto_bold"
    android:background="@color/green"
    android:layout_height="45dp"></TextView>

    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/noMatchFound"
        android:text="Not Found"
        android:visibility="gone"
        android:fontFamily="@font/roboto_regular"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ProgressBar>
</RelativeLayout>