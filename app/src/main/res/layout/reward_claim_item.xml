    <ImageView
        android:id="@+id/imageView_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        android:src="@mipmap/t_shirt"/>

    <TextView
        android:id="@+id/textView_item_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:text="T-shirt"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        app:layout_constraintTop_toBottomOf="@+id/imageView_item"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textView_redeem_points_val"
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:text="200 DC"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        app:layout_constraintTop_toBottomOf="@+id/textView_item_name"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@+id/textView_redeem_points_val"
        app:layout_constraintLeft_toLeftOf="@id/imageView_item"
        app:layout_constraintRight_toRightOf="@id/imageView_item"
        android:text="Claim Now"/>
